{
  "manifest_version": 2,

  "name": "BBC iPlayer Downloader",
  "description": "BBC iPlayer Downloader",
  "version": "1.0",

  "browser_action": {
    "default_icon": "app/assets/images/app.png",
    "default_popup": "app/views/app.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/",
    "contextMenus"
  ],
  "icons": {
    "16": "app/assets/images/app.png"
  },
  "background": {
    "page": "app/views/background.html",
    "persistent": false
  }
}